---
import Navbar from '../../components/Navbar.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import projects from '../../data/enrichment.json';
---
<BaseLayout>
  <Navbar />
  <main class="max-w-2xl mx-auto p-4 sm:p-8 space-y-6">
    <h1 class="text-xl sm:text-2xl mb-4">Enrichment Projects</h1>
    <ul class="space-y-4">
      {projects.map(project => (
        <li>
          <a href={`/enrichment/${project.slug}`} class="block border border-gray-700 p-4 hover:bg-gray-800">
            <h2 class="text-lg text-gray-100 mb-1">{project.title}</h2>
            <p class="text-gray-400 text-sm">{project.description}</p>
          </a>
        </li>
      ))}
    </ul>
  </main>
</BaseLayout>
